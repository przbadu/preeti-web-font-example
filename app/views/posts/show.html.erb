<div class="screen">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Title:</strong>
    <span class="nepali-font"><%= @post.title %></span>
  </p>

  <%= link_to 'Edit', edit_post_path(@post) %> |
  <%= link_to 'Back', posts_path %>
  <a href="" onclick="window.print();">PRINT</a>
</div>

<div class="print">
  <p><%= t('title') %></p>
  <p class="nepali-font"><%= @post.title %></p>
</div>

<style>
  .print {
    display: none;
  }

  @media print {
    .screen {
      display: none;
    }
    .print {
      display: block;
    }
  }
</style>
